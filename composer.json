{
    "name": "pushword/new",
    "type": "project",
    "license": "MIT",
    "description": "Install a new Pushword instance with ease.",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2.5",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/flex": "^1.3.1"
    },
    "flex-require": {
        "symfony/console": "^5.2",
        "symfony/dotenv": "^5.2",
        "symfony/framework-bundle": "^5.2",
        "symfony/runtime": "*",
        "symfony/yaml": "^5.2",
        "pushword/core": "*"
    },
    "require-dev": {
        "symfony/profiler-pack": "*",
        "pushword/installer": "*",
        "symfony/phpunit-bridge": "^5.2"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": [],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "Pushword\\Installer\\PostInstall::runPostUpdate",
            "@auto-scripts"
        ],
        "post-autoload-dump": [
            "Pushword\\Installer\\PostAutoloadDump::runPostAutoload"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "5.*"
        }
    },
    "authors": [
        {
            "name": "Robin@PiedWeb",
            "email": "contact@piedweb.com",
            "homepage": "https://piedweb.com"
        }
    ]
}
